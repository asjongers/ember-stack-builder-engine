<div class="collapsible-header {{if active 'active'}}" {{action "headerClicked"}}>
  {{#if icon}}
    {{bw-compat-icon icon extraClasses=iconPosition}}
  {{/if}}

  {{title}}

  {{#if badge}}
    <span class="badge">
      {{badge}}
    </span>
  {{/if}}
</div>

<div class="collapsible-body">
    <p>{{yield}}</p>
</div>
