<div class="compact">
  <div class="container">
    <h1>Docker Compose files</h1>
  </div>

  <div class="container">
    <div class="row">
      <div class="search">
        <i class="material-icons">search</i>
        <input type="text" oninput= {{perform dockerList value="target.value"}} placeholder="Search" />
      </div>
    </div>
  </div>

  <div class="container">
    {{#if dockerList.isRunning}}
      {{md-loader mode="circular"}}
    {{else}}
      <ul class="collection">
        {{#each dockerList.lastSuccessful.value as |dockerCompose|}}
          <li class='collection-item'>
            {{dockerCompose.title}}
          </li>
        {{else}}
          <li class='collection-item empty-text'>
            No docker compose file was found
          </li>
        {{/each}}
      </ul>
    {{/if}}
  </div>

  <div class="container">
    <div class="floating-btn">
      {{md-btn icon='add' action='addNewFile' buttonType='floating' class='btn-large'}}
    </div>
  </div>
</div>
