<div class="compact">
  <div class="container">
    <h1>Docker Compose files</h1>
  </div>

  <div class="container">
    <div class="row">
      <div class="search">
        <i class="material-icons">search</i>
        {{input type="type" value=searchValue }}
      </div>
    </div>
  </div>

  <div class="container">
    {{#if model.isRunning}}
      {{md-loader mode="circular"}}
    {{else}}
      <ul class="collection">
        {{#each model.lastSuccessful.value  as |dockerCompose|}}
          <li class='collection-item' {{action 'editFile' dockerCompose.id}}>
            {{dockerCompose.title}}
          </li>
        {{else}}
          <li class='collection-item empty-text'>
            No docker compose file was found
          </li>
        {{/each}}
      </ul>
    {{/if}}
  </div>

  <div class="container">
    <div class="floating-btn">
      {{md-btn icon='add' action='addNewFile' buttonType='floating' class='btn-large'}}
    </div>
  </div>
</div>
